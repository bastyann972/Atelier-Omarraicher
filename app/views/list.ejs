<%- include('partials/header') %>
  <main class="page-content">
    <h1 class="page-title">Au Chouette Maraîcher</h1>
    <div class="page-main">
      <section class="segment">
        <div class="segment-title segment-title--action">
          <h2>Tous les produits</h2>
          <label class="small-hidden">
            Produits par ligne 
            <select>
              <option value="2">2</option>
              <option selected value="4">4</option>
            </select>
          </label>
        </div>
       
          <div class="segment-cards segment-cards--4">
            <% for (const product of products) {%>
            <article class="card">
              <img class="card-img" src="/img/products/<%=product.slug%>.jpg" alt="">
              <h3 class="card-title"><%= product.title %></h3>
              <a class="card-action btn" href="" aria-label="Voir le détail du produit <%= product.title %>">Voir le détail</a>
            </article>
        <%}%> 
        
        </div>
      </section>
      <aside class="segment">
        <h2 class="segment-title">Votre Maraîcher partout en France</h2>
        <p class="segment-desc">Retrouvez nos boutiques aux quatre coins de l'hexagone.</p>
        <ul class="segment-list">
          <li>Paris</li>
          <li>Lyon</li>
          <li>Marseille</li>
          <li>Brest</li>
          <li>Lille</li>
          <li>Strasbourg</li>
          <li>Montpellier</li>
          <li>Bar-le-Duc</li>
        </ul>
      </aside>
    </div>
    <aside class="sidebar">
      <div class="siderbar-content">
        <h2 class="sidebar-title">A propos</h2>
        <p class="sidebar-desc">Découvrez l'origine du Chouette Maraîcher.</p>
        <a class="sidebar-btn btn" href="" aria-label="Découvrir l'origine">Découvrir</a>
      </div>
    </aside>
  </main>
  <%- include('partials/footer') %>